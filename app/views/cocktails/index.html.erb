<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, width: 400, crop: :fill %>')">
    <h2><%= link_to cocktail.name, cocktail %></h2>
  </div>
<% end %>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'cocktail-bar.jpg' %>);">
  <h2><%= link_to '+ Add new cocktail', new_cocktail_path %></h2>
</div>

